#! /usr/bin/env bash

CORE_OC=1200
MEM_OC=1850
CORE_V_IDX=4
FANSPEED=40

ohgodatool -i 0 --set-fanspeed $FANSPEED
ohgodatool -i 0 --core-state 7 --core-vddc-idx $CORE_V_IDX \
  && ohgodatool -i 0 --core-state 7 --core-clock $CORE_OC \
  && ohgodatool -i 0 --mem-state 2 --mem-clock $MEM_OC

ohgodatool -i 1 --set-fanspeed $FANSPEED
ohgodatool -i 1 --core-state 7 --core-vddc-idx $CORE_V_IDX \
  && ohgodatool -i 1 --core-state 7 --core-clock $CORE_OC \
  && ohgodatool -i 1 --mem-state 2 --mem-clock $MEM_OC

ohgodatool -i 2 --set-fanspeed $FANSPEED
ohgodatool -i 2 --core-state 7 --core-vddc-idx $CORE_V_IDX \
  && ohgodatool -i 2 --core-state 7 --core-clock $CORE_OC \
  && ohgodatool -i 2 --mem-state 2 --mem-clock $MEM_OC

ohgodatool -i 3 --set-fanspeed $FANSPEED
ohgodatool -i 3 --core-state 7 --core-vddc-idx $CORE_V_IDX \
  && ohgodatool -i 3 --core-state 7 --core-clock $CORE_OC \
  && ohgodatool -i 3 --mem-state 2 --mem-clock $MEM_OC

ohgodatool -i 4 --set-fanspeed $FANSPEED
ohgodatool -i 4 --core-state 7 --core-vddc-idx $CORE_V_IDX \
  && ohgodatool -i 4 --core-state 7 --core-clock $CORE_OC \
  && ohgodatool -i 4 --mem-state 2 --mem-clock $MEM_OC

ohgodatool -i 5 --set-fanspeed $FANSPEED
ohgodatool -i 5 --core-state 7 --core-vddc-idx $CORE_V_IDX \
  && ohgodatool -i 5 --core-state 7 --core-clock $CORE_OC \
  && ohgodatool -i 5 --mem-state 2 --mem-clock $MEM_OC
